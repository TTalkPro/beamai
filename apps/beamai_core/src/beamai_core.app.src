{application, beamai_core, [
    {description, "BeamAI Core - Kernel 框架"},
    {vsn, "0.1.0"},
    {registered, [beamai_core_sup, beamai_http_pool]},
    {mod, {beamai_core_app, []}},
    {applications, [kernel, stdlib, jsx, uuid, hackney]},
    {optional_applications, [gun, beamai_llm]},
    {env, []},
    {modules, [
        %% OTP 应用
        beamai_core_app,
        beamai_core_sup,
        %% Facade 入口
        beamai,
        %% Kernel 核心
        beamai_kernel,
        beamai_function,
        beamai_plugin,
        beamai_context,
        beamai_filter,
        beamai_result,
        beamai_prompt,
        %% 行为接口
        beamai_llm_behaviour,
        beamai_http_behaviour,
        %% HTTP 客户端
        beamai_http,
        beamai_http_hackney,
        beamai_http_gun,
        beamai_http_pool,
        %% 工具
        beamai_id,
        beamai_utils
    ]},
    {licenses, ["Apache-2.0"]},
    {links, []}
]}.
