{application, beamai_core, [
    {description, "Agent Framework Core - Behaviours and Pure Functions"},
    {vsn, "0.1.0"},
    {registered, [beamai_core_sup, beamai_http_pool]},
    {mod, {beamai_core_app, []}},
    {applications, [
        kernel,
        stdlib,
        jsx,
        uuid,
        hackney
    ]},
    %% Gun 作为可选依赖，用于 HTTP/2 支持
    {optional_applications, [gun]},
    {env, [
        %% HTTP 后端配置（可选：beamai_http_hackney | beamai_http_gun）
        %% {http_backend, beamai_http_hackney}
    ]},
    {modules, [
        %% Application
        beamai_core_app,
        beamai_core_sup,
        %% Behaviours
        beamai_behaviour,
        beamai_llm_behaviour,
        beamai_buffer_behaviour,
        beamai_http_behaviour,
        %% Data Types
        beamai_message,
        beamai_result,
        beamai_tool,
        beamai_types,
        %% Protocol (JSON-RPC, SSE)
        beamai_jsonrpc,
        beamai_sse,
        %% Utils
        beamai_id,
        beamai_utils,
        %% HTTP Client
        beamai_http,
        beamai_http_hackney,
        beamai_http_gun,
        beamai_http_pool
    ]},
    {licenses, ["Apache-2.0"]},
    {links, []}
]}.
